# Application Environment
APP_NAME="SEMS"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://uddsems-production.up.railway.app
APP_TIMEZONE=UTC

# Force HTTPS in production
FORCE_HTTPS=true

# Database Configuration
# Database configuration will be provided by Railway
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST:-mysql}
DB_PORT=${MYSQLPORT:-3306}
DB_DATABASE=${MYSQLDATABASE:-railway}
DB_USERNAME=${MYSQLUSER:-root}
DB_PASSWORD=${MYSQLPASSWORD:-password}

# Use MySQL in production
DB_SOCKET=${MYSQL_URL}

# Redis Configuration (if using Redis)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session
SESSION_DRIVER=database
SESSION_SECURE_COOKIE=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=none
SESSION_LIFETIME=120

# Cache
CACHE_DRIVER=file

# Trust proxies for load balancers and SSL
TRUSTED_PROXIES=*
TRUSTED_HOSTS=*

# Queue
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
