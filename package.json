{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "start": "npm run prod",
        "prod": "php artisan serve --host=0.0.0.0 --port=8000",
        "dev:all": "concurrently -n \"VITE,ARTISAN\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev\" \"php artisan serve --port=8000\"",
        "build:railway": "npm ci --production=false && npm run build",
        "setup": "composer install && npm install && cp .env.example .env && php artisan key:generate",
        "lint": "eslint . --ext .js,.jsx --fix",
        "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
        "test": "php artisan test",
        "migrate": "php artisan migrate",
        "migrate:fresh": "php artisan migrate:fresh --seed",
        "db:seed": "php artisan db:seed",
        "optimize": "php artisan optimize",
        "clear": "php artisan optimize:clear",
        "postinstall": "npm run build",
        "inertia:setup": "php artisan inertia:middleware",
        "storage:link": "php artisan storage:link"
    },
    "dependencies": {
        "@headlessui/react": "^1.7.17",
        "@inertiajs/inertia": "^0.11.1",
        "@inertiajs/progress": "^0.2.7",
        "@inertiajs/react": "^1.0.0",
        "@tailwindcss/forms": "^0.5.3",
        "autoprefixer": "^10.4.12",
        "axios": "^1.1.3",
        "laravel-vite-plugin": "^0.7.2",
        "postcss": "^8.4.18",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.7.1",
        "vite": "^4.0.0"
    },
    "devDependencies": {
        "@types/node": "^18.11.9",
        "@types/react": "^18.0.24",
        "@types/react-dom": "^18.0.8",
        "@vitejs/plugin-react": "^3.0.0",
        "eslint": "^8.23.1",
        "eslint-plugin-react": "^7.31.10",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.3.4"
    }
}
